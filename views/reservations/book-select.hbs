<main class="container my-5">
  <h2 class="text-center text-danger mb-4">Book Your Flight</h2>

  <form id="bookForm" action="/flights/search" method="GET" class="mx-auto" style="max-width: 500px;">
    <div class="mb-3">
      <label for="origin" class="form-label fw-semibold">Origin</label>
      {{> origin}}
    </div>

    <div class="mb-3">
      <label for="destination" class="form-label fw-semibold">Destination</label>
      {{> destination}}
    </div>

    <div class="mb-3">
      <label for="date" class="form-label fw-semibold">Departure Date</label>
      <input type="date" id="date" name="date" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-danger w-100">Find Flights</button>
  </form>
</main>

