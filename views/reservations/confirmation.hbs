<main class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
  <div class="card shadow-lg border-0" style="max-width: 750px; width: 100%;">
    
    <!-- HEADER -->
    <div class="card-header bg-danger text-white text-center py-4 rounded-top">
      <h2 class="fw-bold mb-1"></i>Booking Confirmed!</h2>
      {{#if reservation.flights.[0]}}
        <p class="mb-0">
          Your flight from <strong>{{reservation.flights.[0].origin}}</strong>
          to <strong>{{reservation.flights.[0].destination}}</strong> is confirmed.
        </p>
      {{/if}}
    </div>

    <!-- BODY -->
    <div class="card-body px-5 py-4">
      <h4 class="text-danger fw-bold mb-4 text-center">
        {{#if (eq reservation.tripType "Round-Trip")}}
          Round-Trip Summary
        {{else}}
          Flight Summary
        {{/if}}
      </h4>

      {{#if reservation.flights.[0]}}
      <!-- Departure Flight -->
      <div class="mb-4">
        <h5 class="fw-bold text-center text-dark mb-2">Departure Flight</h5>
        <table class="table table-bordered align-middle text-center">
          <tbody>
            <tr><th>Flight No:</th><td>{{reservation.flights.[0].flightNumber}}</td></tr>
            <tr><th>Route:</th><td>{{reservation.flights.[0].origin}} → {{reservation.flights.[0].destination}}</td></tr>
            <tr><th>Departure:</th><td>{{reservation.flights.[0].departureTime}}</td></tr>
            <tr><th>Arrival:</th><td>{{reservation.flights.[0].arrivalTime}}</td></tr>
          </tbody>
        </table>
      </div>
      {{/if}}

      {{#if reservation.flights.[1]}}
      <!-- Return Flight -->
      <div class="mt-4">
        <h5 class="fw-bold text-center text-dark mb-2"> Return Flight</h5>
        <table class="table table-bordered align-middle text-center">
          <tbody>
            <tr><th>Flight No:</th><td>{{reservation.flights.[1].flightNumber}}</td></tr>
            <tr><th>Route:</th><td>{{reservation.flights.[1].origin}} → {{reservation.flights.[1].destination}}</td></tr>
            <tr><th>Departure:</th><td>{{reservation.flights.[1].departureTime}}</td></tr>
            <tr><th>Arrival:</th><td>{{reservation.flights.[1].arrivalTime}}</td></tr>
          </tbody>
        </table>
      </div>
      {{/if}}

      <!-- Buttons -->
      <div class="text-center mt-5">
        <a href="/" class="btn btn-danger px-4 mx-2"></i>Return to Home</a>
        <a href="/reservations/myBookings" class="btn btn-outline-secondary px-4 mx-2">
          </i>View My Reservations
        </a>
      </div>
    </div>

    <!-- FOOTER -->
    <div class="card-footer text-center text-muted small py-3">
      Thank you for choosing <strong>Archers Airlines</strong>
    </div>
  </div>
</main>
