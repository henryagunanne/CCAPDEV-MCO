<main class="booking-page container-fluid my-5 px-4">
  <div class="card shadow-lg mx-auto" style="max-width: 900px;">
    <div class="card-header bg-danger text-white text-center py-3">
      <h3 style="color: white">Book Your Flight – {{flight.flightNumber}}</h3>
      <h2 class="route-display mb-1">{{flight.origin}} → {{flight.destination}}</h2>
      <p class="flight-details mb-0">
  Departure: {{flight.departureTime}} | Arrival: {{flight.arrivalTime}}
</p>
<p class="flight-price mb-0">₱{{flight.price}}</p>


    </div>

    <!-- Flight Schedule Info -->
<div class="alert alert-danger text-center fw-semibold mt-3">
  {{#if (eq tripType "Round-Trip")}}
    <strong>{{formatDate departDate}}</strong> → <strong>{{formatDate returnDate}}</strong>
  {{else}}
    <strong>{{formatDate departDate}}</strong>
  {{/if}}
  <br>
  <small class="text-muted">(Flight dates and class are pre-set for this route)</small>
</div>


<!-- Hidden Inputs -->
<input type="hidden" id="travelClass" name="travelClass" value="{{travelClass}}">
<input type="hidden" id="tripType" name="tripType" value="{{tripType}}">
<input type="hidden" id="departDate" name="departDate" value="{{departDate}}">
<input type="hidden" id="returnDate" name="returnDate" value="{{returnDate}}">


    <div class="card-body">
      <form id="reservationForm" action="/reservations/create" method="POST">
        <!-- Hidden Fields -->
        <input type="hidden" name="flight" value="{{flight._id}}">
        <input type="hidden" id="passengersData" name="passengers">

        <!-- Trip Type Selector -->
        <div class="row mb-3">
          <div class="col-md-4">
            <label class="form-label fw-semibold">Trip Type</label>
            <select id="tripTypeSelect" name="tripType" class="form-select">
            <option value="One-Way" {{#if (eq tripType "One-Way")}}selected{{/if}}>One-Way</option>
            <option value="Round-Trip" {{#if (eq tripType "Round-Trip")}}selected{{/if}}>Round-Trip</option>
          </select>

          </div>
        </div>

      
        <!-- Return Flight Section (hidden for One-Way, shown for Round-Trip) -->
        <div id="returnFlightSection" class="alert alert-info text-center fw-semibold {{#unless (eq tripType "Round-Trip")}}d-none{{/unless}}">
          <h5 class="text-danger fw-bold mb-3">Select Return Flight</h5>
          
          <select 
            id="returnFlight" 
            name="returnFlight" 
            class="form-select text-center mx-auto return-flight-dropdown"
          >
            <option value="">-- Choose Return Flight --</option>
            {{#each returnFlights}}
              <option value="{{this._id}}">
                {{this.origin}} → {{this.destination}} | ₱{{this.price}} 
                ({{formatDate this.departureDate}} {{this.departureTime}} → {{formatDate this.arrivalDate}} {{this.arrivalTime}})
              </option>
            {{/each}}
          </select>
        </div>






        <!-- Passenger Count -->
        <div class="row mb-3">
          <div class="col-md-4">
            <label for="passengerCount" class="form-label fw-semibold">Number of Passengers</label>
            <input type="number" id="passengerCount" name="passengerCount" class="form-control" min="1" max="10" value="1" required>
          </div>
        </div>

        <!-- Dynamic Passenger Cards -->
        <div id="passengerFields"></div>

        <!-- Seat Selection -->
        <h5 class="text-center text-danger mt-4">Seat Selection</h5>
        <div id="seat-map" class="my-3"></div>

        <!-- Legend -->
        <div class="d-flex justify-content-center gap-2 mb-3 flex-wrap">
          <span class="badge bg-danger">First Class</span>
          <span class="badge bg-light text-dark border border-purple">Business</span>
          <span class="badge bg-primary">Economy</span>
          <span class="badge bg-secondary">Occupied</span>
          <span class="badge bg-warning text-dark">Selected</span>
        </div>

        <!-- Price Summary -->
        <div class="card bg-light p-3 mb-4 summary-card mx-auto">
          <h5 class="text-danger fw-bold">Price Summary</h5>

          <p>Base Fare: ₱<span id="baseFare">{{flight.price}}</span></p>

        <p>Return Fare: ₱<span id="returnFare">0</span></p>


          <p>Meal Total: ₱<span id="mealFee">0</span></p>
          <p>Baggage Total: ₱<span id="baggageFee">0</span></p>
          <p>Seat Total: ₱<span id="seatFee">0</span></p>
          <hr>
          <h5>Total: ₱<span id="totalPrice">{{flight.price}}</span></h5>
        </div>


        <!-- Buttons -->
        <div class="d-flex justify-content-center gap-2">
          <button type="submit" id="confirmBooking" class="btn btn-danger px-4">Confirm Booking</button>
          <button type="reset" class="btn btn-outline-secondary px-4">Reset</button>
        </div>
      </form>
    </div>
  </div>
</main>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const returnFlightSelect = document.getElementById("returnFlight");
  const returnFareElement = document.getElementById("returnFare");
  const baseFareElement = document.getElementById("baseFare");
  const totalPriceElement = document.getElementById("totalPrice");

  let baseFare = parseInt(baseFareElement.textContent) || 0;

  // Update return fare and total when a return flight is chosen
  returnFlightSelect.addEventListener("change", function () {
    const selectedOption = returnFlightSelect.options[returnFlightSelect.selectedIndex];
    const priceMatch = selectedOption.textContent.match(/₱(\d+)/);
    const returnFare = priceMatch ? parseInt(priceMatch[1]) : 0;

    returnFareElement.textContent = returnFare;

    // Compute total (base + return + extras)
    const meal = parseInt(document.getElementById("mealFee").textContent) || 0;
    const baggage = parseInt(document.getElementById("baggageFee").textContent) || 0;
    const seat = parseInt(document.getElementById("seatFee").textContent) || 0;

    const total = baseFare + returnFare + meal + baggage + seat;
    totalPriceElement.textContent = total;
  });
});


const occupiedSeats = {{{occupiedSeats}}} || [];
</script>

